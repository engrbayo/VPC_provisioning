# KICS Configuration File
# Customize KICS scanning behavior for Terraform

# Exclude specific paths
exclude-paths:
  - .terraform/
  - .git/
  - .github/
  - .kics/
  - terraform.tfstate
  - terraform.tfstate.backup
  - "*.tfstate"

# Query severity threshold (fail on high and critical)
fail-on:
  - high
  - critical

# Exclude specific queries (add query IDs to ignore)
# Example: exclude-queries: "e38a8e0a-b88b-4902-b3fe-b0fcb17d5c10"
exclude-queries: []

# Include all available queries
# exclude-categories: []

# Timeout for query execution (in seconds)
timeout: 60

# Enable verbose output for debugging
# verbose: true

# Disable progress bar in CI/CD
# no-progress: true

# Minimal UI output
minimal-ui: false
